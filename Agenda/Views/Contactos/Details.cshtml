@model Agenda.Models.contacto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="container mt-5">
    <!-- Contenedor principal con margen superior de 5 -->
    <div class="card">
        <!-- Tarjeta principal -->
        <div class="card-header bg-primary text-white">
            <!-- Encabezado de la tarjeta con fondo azul y texto blanco -->
            <h1 class="h3">Detalles del Contacto</h1>
            <!-- Título del encabezado -->
        </div>
        <div class="card-body">
            <!-- Cuerpo de la tarjeta -->
            <h4 class="text-primary">@Model.Nombre</h4>
            <!-- Nombre del contacto en texto azul -->
            <hr />
            <!-- Separador horizontal -->
            <dl class="row">
                <!-- Lista de detalles en un formato de filas -->
                <dt class="col-sm-2">Nombre</dt>
                <!-- Término del detalle -->
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Nombre)</dd>
                <!-- Definición del detalle con el nombre del contacto -->
                <dt class="col-sm-2">Teléfono</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Telefono)</dd>
                <!-- Definición del detalle con el teléfono del contacto -->
                <dt class="col-sm-2">Categoría</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.categoria)</dd>
                <!-- Definición del detalle con la categoría del contacto -->
            </dl>
        </div>
        <div class="card-footer align-content-center">
            <!-- Pie de la tarjeta -->
            <div class="btn-group" role="group">
                <!-- Grupo de botones -->
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
                <!-- Botón para editar el contacto -->
                <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
                <!-- Botón para volver a la lista de contactos -->
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                    <!-- Formulario para eliminar el contacto -->
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <!-- Botón para eliminar el contacto -->
                </form>
            </div>
        </div>
    </div>
</div>

