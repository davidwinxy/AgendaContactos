@{
    ViewData["Title"] = "Index";
    string searchString = ViewData["CurrentFilter"] as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agenda</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Agenda.styles.css" asp-append-version="true" />

    <link href="~/lib/startbootstrap/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/lib/startbootstrap/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/lib/startbootstrap/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <script src="~/lib/startbootstrap/vendor/jquery/jquery.min.js"></script>
</head>

<body>
    <header>
        <!-- Navbar con formulario de búsqueda y botón de creación -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="container-fluid">
                    <!-- Marca o logo de la navbar -->
                    <a class="navbar-brand text-white" asp-area="" asp-controller="Contactos" asp-action="Index">Agenda</a>
                    <!-- Botón de hamburguesa para pantallas pequeñas -->
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <!-- Contenido de la navbar -->
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <!-- Formulario de búsqueda -->
                            <li class="nav-item">
                                <form asp-action="Index" method="get" class="form-inline my-2 my-lg-0">
                                    <div class="input-group">
                                        <input type="text" name="searchString" class="form-control" placeholder="Buscar" value="@searchString" />
                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-light">
                                                <i class="fas fa-search"></i>
                                            </button>

                                        </div>

                                    </div>
                                </form>
                            </li>
                            <div class="my-2 my-lg-0 d-lg-none"></div>
                            <div class="text">
                                <a asp-action="Create" class="btn btn-light">
                                    <i class="fas fa-plus"></i>
                                </a>
                            </div>

                        </ul>


                        <!-- Botón de creación -->
                        <!-- Opción de salir -->
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Usuario" asp-action="Logout">Salir</a>
                            </li>
                        </ul>
                    </div>
                </div>
            }
            
            
        </nav>
    </header>



        <!-- Contenedor principal de la página -->
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
     
    <!-- Scripts necesarios para Bootstrap u otros frameworks CSS/JS -->
    <!-- Asegúrate de incluir los scripts necesarios aquí -->



   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


<!-- Bootstrap core JavaScript-->

<script src="~/lib/startbootstrap/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- Core plugin JavaScript-->
<script src="~/lib/startbootstrap/vendor/jquery-easing/jquery.easing.min.js"></script>

<!-- Custom scripts for all pages-->
<script src="~/lib/startbootstrap/js/sb-admin-2.min.js"></script>
<script src="~/lib/chartjs/chart.min.js"></script>

<!-- Page level plugins -->
<script src="~/lib/startbootstrap/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="~/lib/startbootstrap/vendor/datatables/dataTables.bootstrap4.min.js"></script>